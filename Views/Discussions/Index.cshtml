@using CatForum.Data
@using Microsoft.AspNetCore.Identity

@model IEnumerable<CatForum.Models.Discussion>

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Index";
    var user = await UserManager.GetUserAsync(User);
}

<h1>Index</h1>

<button asp-action="Create" class="btn btn-primary">Create new discussion</button>


@if(user.Discussions != null){
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageFile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    if (item.ApplicationUserId == UserManager.GetUserId(User)){            
        <tr>
        @if(item.ImageFilename != ""){
            string imageUrl = Url.Content("/photos/" + item.ImageFilename);
         <td>
            <img src="@imageUrl" width="80" height="55" alt="thumbnail for @item.DiscussionId" />
        </td>
        }else{
            <td>
                <img src="/photos/no_img_found.jpeg" width="80" height="55" alt="thumbnail for @item.DiscussionId" />
            </td>
        }
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DiscussionId" class="me-2">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DiscussionId" class="ms-2 me-2">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DiscussionId" class="ms-2">Delete</a> 
            </td>
        </tr>
        }
}
    </tbody>
</table>
}else{
    <div>No discussions created yet</div>
}

